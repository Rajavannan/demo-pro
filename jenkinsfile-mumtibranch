pipeline {
    agent any
    stages {
        stage('SCM') {
            steps {
               git branch: 'test-war', url: 'https://github.com/awspandian/demo-pro.git'
            }
        }
     	stage('Build') {
            steps {
               sh 'mvn clean'
	       sh 'mvn install'
            }
        }
        stage('Build Docker Image') {
            when {
                branch 'test-war'
            }
            steps {
                script {
                    app = docker.build("dockerpandian/monnov")
                    app.inside {
                        sh 'echo $(curl localhost:8080)'
                    }
                }
            }
        }
        stage('Push Docker Image') {
            when {
                branch 'test-war'
            }
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
       
    }
}
